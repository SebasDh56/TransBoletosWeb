@model TransporteBoletos.Models.Boleto

@{
    ViewData["Title"] = "Detalles del Boleto";
}

<h1>Detalles del Boleto</h1>

<div class="card p-4 shadow-sm">
    <h4 class="card-title">Información del Boleto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NumeroBoleto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NumeroBoleto)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaCompra)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaCompra)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RutaId)
        </dt>
        <dd class="col-sm-9">
            @(Model.Ruta != null ? $"{Model.Ruta.Origen} - {Model.Ruta.Destino}" : "Sin ruta")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PasajeroId)
        </dt>
        <dd class="col-sm-9">
            @(Model.Pasajero != null ? $"{Model.Pasajero.Nombre} ({Model.Pasajero.Documento})" : "Sin pasajero")
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>