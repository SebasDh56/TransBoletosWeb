@model TransporteBoletos.Models.Boleto

@{
    ViewData["Title"] = "Editar Boleto";
}

<h1>Editar Boleto</h1>

<div class="card p-4 shadow-sm">
    <h4 class="card-title">Editar Boleto</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="NumeroBoleto" class="form-label"></label>
                    <input asp-for="NumeroBoleto" class="form-control" />
                    <span asp-validation-for="NumeroBoleto" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FechaCompra" class="form-label"></label>
                    <input asp-for="FechaCompra" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaCompra" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RutaId" class="form-label"></label>
                    <select asp-items="ViewBag.Rutas" asp-for="RutaId" class="form-select">
                        <option value="">-- Seleccione una ruta --</option>
                    </select>
                    <span asp-validation-for="RutaId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PasajeroId" class="form-label"></label>
                    <select asp-items="ViewBag.Pasajeros" asp-for="PasajeroId" class="form-select">
                        <option value="">-- Seleccione un pasajero --</option>
                    </select>
                    <span asp-validation-for="PasajeroId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}