@model TransporteBoletos.Models.Boleto

@{
    ViewData["Title"] = "Eliminar Boleto";
}

<h1>Eliminar Boleto</h1>

<h3 class="text-danger">¿Está seguro de eliminar este boleto?</h3>
<div class="card p-4 shadow-sm">
    <h4 class="card-title">Información del Boleto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NumeroBoleto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NumeroBoleto)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaCompra)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaCompra)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RutaId)
        </dt>
        <dd class="col-sm-9">
            @(Model.Ruta != null ? $"{Model.Ruta.Origen} - {Model.Ruta.Destino}" : "Sin ruta")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PasajeroId)
        </dt>
        <dd class="col-sm-9">
            @(Model.Pasajero != null ? Model.Pasajero.Nombre : "Sin pasajero")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>