@model TransporteBoletos.Models.Pasajero

@{
    ViewData["Title"] = "Crear Pasajero";
}

<h1>Crear Pasajero</h1>

<div class="card p-4 shadow-sm">
    <h4 class="card-title">Nuevo Pasajero</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Documento" class="form-label"></label>
                    <input asp-for="Documento" class="form-control" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RutaId" class="form-label"></label>
                    <select asp-items="ViewBag.Rutas" asp-for="RutaId" class="form-select">
                        <option value="">-- Seleccione una ruta --</option>
                    </select>
                    <span asp-validation-for="RutaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}