@model TransporteBoletos.Models.Ruta

@{
    ViewData["Title"] = "Eliminar Ruta";
}

<h1>Eliminar Ruta</h1>

<h3 class="text-danger">¿Está seguro de eliminar esta ruta?</h3>
<div class="card p-4 shadow-sm">
    <h4 class="card-title">Información de la Ruta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Origen)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Origen)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Destino)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>